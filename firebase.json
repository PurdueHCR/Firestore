{
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint",
      "npm --prefix \"$RESOURCE_DIR\" run build"
    ]
  },
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
     	{
	        "source": "/user/**",
        	"destination": "user"
      	},
	{
		"source": "/competition/**",
		"destination": "competition"
	},
	{
		"source":"/swagger-ui/**",
		"headers": [{
			"key" : "Cache-Control",
			"value" : "max-age=0"
			}],
		"dynamicLinks" : true
	},
	{
		"source":"**",
		"destination":"/index.html"
	}
    ]
  }
}
